<form action="/ticketCreate" method="post">
    Título: <input type="text" name="titulo">
    <br> <br>

    Descrição: <input type="text" name="descricao">
    <br> <br>

    Categoria: <select name="categoriaId">
        {{#each categorias}}
        <tr>
            <option value={{id}}>{{nome}}</option>
        </tr>
        {{/each}}
    </select>
    <br> <br>

    {{#if admin}}
    Técnico: <select name="tecnicoId">
        {{#each usuarios}}
        <tr>
            <option value={{id}}>{{login}}</option>
        </tr>
        {{/each}}
    </select>
    {{/if}}

    {{#if tecnico}}
    Técnico: <select name="tecnicoId">
        {{#each usuarios}}
        <tr>
            <option value={{id}}>{{login}}</option>
        </tr>
        {{/each}}
    </select>
    {{/if}}
    
    <br> <br>

    {{!-- Concluído: 
    <input type="checkbox" name="concluido" value="true"> --}}
    <br> <br>
    <input type="submit" class="btn btn-primary" value="Cadastrar">
    <a href="home"><button type="button" class="btn btn-primary">Voltar</button></a>
</form>