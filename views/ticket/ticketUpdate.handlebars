<h2>Alterar Ticket</h2>
<br>

<form action="/ticketUpdate" method="post" style="width: 30vw;">
    <input type="hidden" name="id" value={{ticket.id}}>

    <label class="form-label">Título:</label>
    <input class="form-control" type="text" name="titulo" value="{{ticket.titulo}}">

    <label class="form-label">Descrição:</label>
    <input class="form-control" type="text" name="descricao" value="{{ticket.descricao}}">

    <label class="form-label">Categoria:</label>
    <select id="categoriaId" class="form-select">
        {{#each categorias}}
        <tr>
            <option value={{id}}>{{nome}}</option>
        </tr>
        {{/each}}
    </select>

    {{#if admin}}
    <label class="form-label">Técnico:</label>
    <select class="form-select" name="tecnicoId">
        {{#each usuarios}}
        <tr>
            {{#ifCond tipo '2'}}
            <option value={{id}}>{{login}}</option>
            {{/ifCond}}
        </tr>
        {{/each}}
    </select>
    {{/if}}

    {{#if tecnico}}
    {{!-- <label class="form-label">Observação:</label> --}}
    <label for="exampleFormControlTextarea1" class="form-label">Observação:</label>
    <textarea class="form-control" name="observacao" rows="3" value="{{ticket.observacao}}"></textarea>
    <br>
    {{!-- Concluído: <input type="checkbox" name="concluido" value="true"> --}}
    {{!-- <label class="form-label">Concluído:</label> --}}
    <div class="form-check" style="width: 6vw;">
        <input class="form-check-input" type="checkbox" name="concluido" value="true">
        <label class="form-check-label" for="flexCheckDefault">
            Concluído
        </label>
    </div>
    {{/if}}

    <br>
    <input type="submit" class="btn btn-secondary" value="Cadastrar">
    <br><br>
    <a href="home"><button type="button" class="btn btn-outline-danger">Voltar</button></a>

